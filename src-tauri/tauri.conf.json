{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "../dist",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "BambooClaw",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$HOME/*"
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://github.com/*",
          "https://api.github.com/*"
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.bamboosynergy.bambooclaw",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "BambooClaw",
        "width": 1100,
        "height": 750,
        "decorations": true,
        "resizable": true,
        "fullscreen": false
      }
    ]
  }
}