{
  "package": {
    "productName": "BambooClaw",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.bamboosynergy.bambooclaw",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "Copyright Â© 2024 Bamboo Synergy Technologies",
      "category": "Utility",
      "shortDescription": "Edge AI agent companion and installer",
      "longDescription": "The companion application for managing BambooClaw Core and Lite instances.",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "exceptionDomain": "",
        "signingConfig": {
          "debug": {
            "identity": null,
            "provider": null
          },
          "release": {
            "identity": null,
            "provider": null
          }
        },
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": false,
        "sidecar": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$HOME/*",
          "$HOME/.bambooclaw/*"
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://github.com/*",
          "https://api.github.com/*"
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      }
    },
    "windows": [
      {
        "title": "BambooClaw",
        "width": 1100,
        "height": 750,
        "resizable": true,
        "decorations": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; connect-src https://* http://localhost:*; img-src 'self' data:"
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}