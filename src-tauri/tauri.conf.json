{
  "package": {
    "productName": "BambooClaw",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": false,
        "sidecar": false,
        "open": true
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$HOME/*",
          "$HOME/.bambooclaw/*"
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://github.com/*",
          "https://api.github.com/*"
        ]
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Copyright 2024 Bamboo Synergy Technologies",
      "externalBin": [],
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ],
      "identifier": "com.bamboosynergy.bambooclaw",
      "longDescription": "Beautiful, consumer-grade installer and agent controller for BambooClaw Core and Lite.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerBundleIdentifier": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "BambooClaw Installer",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampServer": ""
      }
    },
    "conf": {
      "ifNoBundler": true
    },
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com; connect-src https://* http://localhost:*; img-src 'self' data:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 750,
        "resizable": true,
        "title": "BambooClaw",
        "width": 1100,
        "decorations": true
      }
    ]
  },
  "build": {
    "devPath": "../dist",
    "distDir": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  }
}